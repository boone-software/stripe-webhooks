{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es6",
    },
    "include": [
        "src/**/*"
    ],
    "typeRoots": [
        "node_modules/@types",
        "./types"
    ]
}
